<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zwl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp" >
        
        <com.sdemo.myprogressbar.HorizonProgressWithNumber
            android:id="@+id/id_progressbar01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="50dp"

            />

        <com.sdemo.myprogressbar.HorizonProgressWithNumber
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            zwl:progress_text_color="#ffF53B03"
            zwl:progress_unreached_color="#ffF7C6B7"
            android:progress="50"
            />
        <com.sdemo.myprogressbar.HorizonProgressWithNumber
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            zwl:progress_text_color="#1c346b"
            zwl:progress_unreached_color="#14cbdc"
            zwl:progress_reached_color="#1c346b"
            zwl:progress_reached_height="4dp"
            android:progress="20"
            />
<com.sdemo.myprogressbar.RoundProgressBarWithNumber
    android:id="@+id/myRoundProgressBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:padding="5dp"
   android:progress="0"
    zwl:progress_reached_height="20dp"
    zwl:progress_text_color="#032ff5"
    zwl:progress_reached_color="#2c48b6"

    zwl:radius="60dp"/>

        <com.sdemo.myprogressbar.RoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            zwl:corner_radius="30dp"
            zwl:is_oval="false"
            />





        </LinearLayout>







</ScrollView>

